#include <stdio.h>
#include "entree_sortie.h"

/* structure */

typedef struct{
  char *titre;
  char *auteur;
  int num;
}s_livre;

s_livre def_livre(char *titre, char *auteur,int num)
{
  s_livre livre;
  livre.titre = titre;
  livre.auteur = auteur;
  livre.num = num;
  return livre;
}

void init_livre(s_livre *livre)
{
  /* On choisit 0 comme numÃ©ro non existant */
  livre->titre = NULL;
  livre->auteur = NULL;
  livre->num = 0;
}

typedef struct {
  s_livre livre;
  s_livre *suivant;
}biblio;

int main()
{
  s_livre livre;
  def_livre("toto","raoul",12);
  printf("%s \n",livre.titre);
  return 0;
}

